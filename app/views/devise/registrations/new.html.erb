<div class="containerLogin">
    <div class="imageContainer">
      <div class="fixedimage">
        <%= image_tag('login.jpg', class: "dinnerImage") %>
      </div>
    </div>
    <div class="cadastroCollum">
      <div class="dinnerTitle">dinnerdash</div>

      <div class="formCadastro"> 
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="informationInput">
            <%= f.label :name ,'Nome'%><br />
            <%= f.text_field :name, autofocus: true, class: "inputBox"  %>
          </div>

          <div class="informationInput">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "inputBox"  %>
          </div>

          <div class="informationInput">
            <%= f.label :password,'Senha' %><br/ >
            <%= f.password_field :password, autocomplete: "new-password",class: "inputBox"  %>
          </div>

          <div class="informationInput">
            <%= f.label :password_confirmation, 'Confirme sua senha' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "inputBox" %>
          </div>

          <div class="actions">
            <%= f.submit "Cadastrar" ,class:'submitButtom'%>
          </div>
        <% end %>
      </div>
      <div class="separateLine"></div>
      <div class="loginLink">
           <div class="outraopcao">Já possui conta?</div>
          <%= button_to("Fazer login", user_session_path ,class:'loginButton') %>
          <%- #Render padrão da página retirado -%>
          <% if false %>
            <%= render "devise/shared/links" %>
          <% end %>
        
      </div>
    </div>
</div>
