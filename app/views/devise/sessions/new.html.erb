<div class="containerLogin">
    <div class="imageContainer">
      <div class="fixedimage">
        <%= image_tag('login.jpg', class: "dinnerImage") %>
      </div>
    </div>
    <div class="cadastroCollum">
        <div class="dinnerTitle">dinnerdash</div>

        <div class="formCadastro"> 
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="informationInput">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'inputBox',autofocus: true, autocomplete: "email" %>
          </div>

          <div class="informationInput">
            <%= f.label :password , 'Senha'%><br />
            <%= f.password_field :password,class: "inputBox" ,autocomplete: "current-password" %>
          </div>

          <%- #Botão do "lembre de mim", por enquanto desativado pois não faz parte do pedido -%>
          <% if false %>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class:'submitButtom' %>
          </div>
        <% end %>
      </div>
      <div class="separateLine"></div>
      <div class="loginLink">
            <%= link_to "Fazer cadastro", new_registration_path(resource_name) %><br />
          <%- #Render padrão da página retirado -%>
          <% if false %>
            <%= render "devise/shared/links" %>
          <% end %>
      </div>
    </div>
</div>
